<%= render partial: 'flash_messages' %>

<div class="card" style="width: 18rem;">
  <% if @product.cover_photo.attached? %>
    <%= image_tag @product.cover_photo, :size => '250x260', class: "card-img-top" %>
  <% else %>
    <img class="card-img-top product-card-placeholder-img" src="https://via.placeholder.com/150" alt="">
  <% end %>
  <div class="card-body">
    <h4 class="card-title"><%= @product.name %></h4>
    <h5 class="card-title">Description:</h5>
    <p class="card-text"><%= @product.description %></p>
    <h5 class="card-title">Price:</h5>
    <p class="card-text"><%= @product.prize %> $</p>
    <h5 class="card-title">Category:</h5>
    <p class="card-text"><%= @product.category.title %></p>
    <h5 class="card-title">Brand:</h5>
    <p class="card-text"><%= @product.brand.title %></p>


    <%= form_with url: line_items_path(product_id: @product.id) do |form| %>
      <%= form.label :quantity, "Quantity" %>
      <%= form.text_field :quantity %>
      <%= form.submit "Add to cart" %>
    <% end %> 
    
   
 <%= button_to 'Add to cart', line_items_path(product_id: @product.id), class: "btn btn-primary mt-2"%> 
  </div>
</div>

