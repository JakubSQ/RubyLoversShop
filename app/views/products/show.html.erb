<%= render partial: 'flash_messages' %>

<div class="card" style="width: 18rem;">
  <%= image_tag @product.cover_photo, :size => '250x260', class: "card-img-top" %>
  <div class="card-body">
    <h4 class="card-title"><%= @product.name %></h4>
    <h5 class="card-title">Description:</h5>
    <p class="card-text"><%= @product.description %></p>
    <h5 class="card-title">Price:</h5>
    <p class="card-text"><%= @product.prize %> $</p>
    <h5 class="card-title">Category:</h5>
    <p class="card-text"><%= @product.category.title %></p>
    <h5 class="card-title">Brand:</h5>
    <p class="card-text"><%= @product.brand.title %></p>
    <%= button_to 'Add to cart', line_items_path(product_id: @product.id), class: "btn btn-primary"%>
  </div>
</div>