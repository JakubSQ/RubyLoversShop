<%= link_to 'Add new shipping method', new_admin_shipment_path, class: "btn btn-outline-success mb-3" %>
<tbody>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Average delivery time</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>

      <% @shipments.each do |shipment| %>
      <tr>
        <td><%= shipment.id %></td>
        <td><%= shipment.name %></td>
        <td><%= shipment.price %></td>
        <td><%= shipment.delivery_time %></td>
        <td>
          <%= link_to 'Edit', edit_admin_shipment_path(shipment), class: "btn btn-outline-primary btn-sm" %>
          <%= link_to 'Delete', admin_shipment_path(shipment), method: :delete, class: "btn btn-outline-danger btn-sm" %>
        </td>
      </tr>
      <% end %>
  </table>
</tbody>
