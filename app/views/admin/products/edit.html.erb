<%= render partial: 'admin/error_messages' %>
<h3>Update product</h3>
<%= form_for [:admin, @product] do |f| %>
<div class="mb-3">
  <%= image_tag @product.cover_photo, :size => '250x260', class: "form-label" %>
  <%= f.file_field :cover_photo  %>
</div>
<div class="mb-3">
  <%= f.label :name, class: "form-label" %>
  <%= f.text_field :name, class: "form-control" %>
</div>
<div class="mb-3">
  <%= f.label :description, class: "form-label" %>
  <%= f.text_area :description, class: "form-control"  %>
</div>
<div class="mb-3">
  <%= f.label :prize, class: "form-label"  %>
  <%= f.number_field :prize, class: "form-control" %>
</div>
<div class="mb-3">
  <%= f.label :category, class: "form-label"  %>
  <%= f.collection_select(:category_id, Category.all, :id, :title,
      { prompt: "Choose category" }, { size: 4, class: "custom-select shadow rounded" }) %>
</div>
<div class="mb-3">
  <%= f.label :brand, class: "form-label"  %>
  <%= f.collection_select(:brand_id, Brand.all, :id, :title,
  { prompt: "Choose brand"}, { size: 6, class: "form-control" }) %>
</div>
  <%= f.submit class: "mb-4"%>
<% end %>
